# Application Configuration
PROJECT_NAME=Resume Screening System
VERSION=1.0.0
API_V1_PREFIX=/api/v1
DEBUG=False
ENVIRONMENT=development
LOG_LEVEL=INFO

# Database Configuration
# Provide either DATABASE_URL or individual DB components
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@localhost:5433/resume_screening
# OR use individual components:
DB_USER=postgres
DB_PASSWORD=YOUR_PASSWORD_HERE
DB_NAME=resume_screening
DB_HOST=localhost
DB_PORT=5433

# Redis Configuration
# Provide either REDIS_URL or individual Redis components
REDIS_URL=redis://:YOUR_REDIS_PASSWORD@localhost:6379/0
# OR use individual components:
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=YOUR_REDIS_PASSWORD_HERE
REDIS_DB=0

# Security Configuration
# IMPORTANT: Generate a secure secret key using: openssl rand -hex 32
SECRET_KEY=YOUR_SECRET_KEY_HERE
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration (comma-separated list)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000

# URLs
BACKEND_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000
BACKEND_PORT=8000
FRONTEND_PORT=3000

# AWS Configuration (optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=
AWS_S3_RESUME_PREFIX=resumes/
AWS_S3_PROCESSED_PREFIX=processed/

# Machine Learning Configuration
BERT_MODEL_NAME=bert-base-uncased
BERT_MODEL_PATH=models/bert-base-uncased
SPACY_MODEL=en_core_web_sm
SPACY_MODEL_PATH=models/en_core_web_sm
USE_GPU=False
ML_CACHE_TTL=3600

# Celery Configuration
# If not set, will default to REDIS_URL
CELERY_BROKER_URL=
CELERY_RESULT_BACKEND=
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=UTC
CELERY_ENABLE_UTC=True
CELERY_WORKER_CONCURRENCY=4
CELERY_WORKER_MAX_TASKS_PER_CHILD=1000

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_USE_TLS=True
EMAIL_FROM=noreply@resumescreening.com
EMAIL_FROM_NAME=Resume Screening System

# File Upload Configuration
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=pdf,doc,docx,txt
UPLOAD_DIR=uploads

# AI/ML API Configuration (optional)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-opus-20240229

# Monitoring & Logging (optional)
SENTRY_DSN=
LOG_FILE_PATH=logs/app.log
ENABLE_METRICS=True
METRICS_PORT=9090
