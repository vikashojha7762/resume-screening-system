# This is an example secrets file. In production, use sealed-secrets or external secret management
# DO NOT commit actual secrets to git!

apiVersion: v1
kind: Secret
metadata:
  name: resume-screening-secrets
  namespace: resume-screening
type: Opaque
stringData:
  # Database credentials
  DB_USER: "postgres"
  DB_PASSWORD: "CHANGE_THIS_PASSWORD"
  DATABASE_URL: "postgresql://postgres:CHANGE_THIS_PASSWORD@postgres-service:5432/resume_screening"
  
  # Redis credentials
  REDIS_PASSWORD: "CHANGE_THIS_PASSWORD"
  REDIS_URL: "redis://:CHANGE_THIS_PASSWORD@redis-service:6379/0"
  
  # Security
  SECRET_KEY: "GENERATE_WITH_openssl_rand_hex_32"
  ALGORITHM: "HS256"
  
  # AWS credentials
  AWS_ACCESS_KEY_ID: "YOUR_AWS_ACCESS_KEY"
  AWS_SECRET_ACCESS_KEY: "YOUR_AWS_SECRET_KEY"
  AWS_REGION: "us-east-1"
  AWS_S3_BUCKET: "resume-screening-bucket"
  
  # Celery
  CELERY_BROKER_URL: "redis://:CHANGE_THIS_PASSWORD@redis-service:6379/0"
  CELERY_RESULT_BACKEND: "redis://:CHANGE_THIS_PASSWORD@redis-service:6379/0"
  
  # Email (if using)
  SMTP_USER: "noreply@resumescreening.com"
  SMTP_PASSWORD: "YOUR_SMTP_PASSWORD"

